      {{validated-input  type="text" model=this  valuePath='shippingaddress' placeholder="date" required=""}}
    </div>
   
    <div class="row ">
      <button class="mybutton" type="submit" {{action 'submitdetails'}}>submit</button>
     
    </div>
   </div>
