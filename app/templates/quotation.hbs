   <form action="" method="post">
     <div class="center">
    <div class="group">  
            
       {{validated-input  type="text" model=this  valuePath='suppliername' placeholder="Your Company Name" required=""}}
      
    </div>
	    <div class="group">      
      {{validated-input  type="text" model=this  valuePath='quotationno' placeholder="Your Address" required=""}}
      
    </div>
     <div class="group">      
      {{validated-input  type="text" model=this  valuePath='materialtype' placeholder="Request To" required=""}}
