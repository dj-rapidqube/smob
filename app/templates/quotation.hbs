<div class="quotation-box">
  <div id="inner-form-header">
    <div id="cont-lock" style="text-align:center ;color:white"><h1><b>Quotation Details</b></h1></div>
    <!--<div id="bottom-head"><h1 id="logintoregister">Login</h1></div>-->
  </div> 
  <br/>
   <form action="" method="post">
      <div class="myformleft" align="center">
    <div class="group">  
            
       {{validated-input  type="text" model=this  valuePath='companyname' placeholder="Manufacturer Company name" required=""}}
      
    </div>
	    <div class="group">      
      {{validated-input  type="text" model=this  valuePath='address' placeholder="Shipping Address" required=""}}
      
    </div>
     <div class="group">      
      {{validated-input  type="text" model=this  valuePath='item' placeholder="item Name" required=""}}
    </div>
    <div class="group">      
      {{validated-input  type="text" model=this  valuePath='Quantity' placeholder="Quantity" required=""}}
      </div>
     <div class="group">      
      {{validated-input  type="text" model=this  valuePath='totalprice' placeholder="Total Price" required=""}}
      </div>
     <div class="group">      
      {{validated-input  type="text" model=this  valuePath='formdate' placeholder="Date" required=""}}
    </div>
   
    <div class="row ">
      <button class="mybutton" type="submit" {{action 'submitdetails'}}>submit</button>
     
    </div>
   </div>
    </form>
  </div>
 

