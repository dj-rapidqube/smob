<div class="materialrequest-box">
  <div id="inner-form-header">
    <div id="cont-lock" style="text-align:center ;color:white"><h1><b>Material Request</b></h1></div>
    <!--<div id="bottom-head"><h1 id="logintoregister">Login</h1></div>-->
  </div> 
  <br/>
   <form action="" method="post">
     <div class="myformleft" align="center">
    <div class="group">  
             <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
       {{validated-input  type="text" model=this  valuePath='companyname' placeholder="Request To" required=""}}
      
    </div>
	    <div class="group">      
      {{validated-input  type="text" model=this  valuePath='address' placeholder="Shipping Address" required=""}}
      
    </div>
     <div class="group">      
     {{!-- {{validated-input  type="text" model=this  valuePath='formdate' placeholder="Requested Date" required=""}}--}}
      {{pikaday-input class='inputMaterial' value=formdate valuePath="formdate"  onSelection=(action (mut formdate)) 
                                    placeholder=" Requested Date" readonly=true format="DD/MMM/YYYY" size="40"}}
    </div>
    
     {{!-- <div class="myformright"> --}}
     
     <div class="group">      
      {{validated-input  type="text" model=this  valuePath='item' placeholder="Item Name" required=""}}
      
    </div>
     <div class="group">      
      {{validated-input  type="text" model=this  valuePath='Quantity' placeholder="Quantity" required=""}}
      
    </div>
  <div class="group">
        {{#pl-uploader  for="upload_file" runtimes="html5 flash silverlight" onfileadd="uploadDoc" as |queue|}}
          <a id="upload_file" style="font-size:18px"><img src="assets/images/images2.png" alt="Smiley face" width="42" height="42">Click Here To Upload Document</a>
         {{/pl-uploader}}
 
    </div>
     <div class="row ">
      <button class="mybutton" type="submit" {{action 'submitdetails'}}>submit</button>
    </div> 

     </div>
    {{!-- </div> --}}

  </form>
 </div> 
 {{#if ShowingModalrequest}}
{{#modal-dialog close="submitdetails" targetAttachment="center" translucentOverlay=true}}
<header class="w3-container w3-teal"> 
        
        <h2></h2>
      </header>
      <div class="w3-container">
          <h3>Material request Submitted Sucessfully... !</h3>
      </div>
               <footer class="w3-container w3-teal">
                        <button type="button" class="close" {{action "okbutton" }}>ok</button>
               </footer>
 {{/modal-dialog}}
 {{/if}}

